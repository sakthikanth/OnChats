<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.j.sakthikanth.onchats">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.j.sakthikanth.onchats.Registration"
            android:label="@string/app_name" />
        <activity
            android:name="com.j.sakthikanth.onchats.Way2Login"
            android:label="@string/title_activity_way2_login" />
        <activity
            android:name="com.j.sakthikanth.onchats.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.j.sakthikanth.onchats.MainPage"
            android:label="@string/title_activity_main_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.j.sakthikanth.onchats.MainPage2"
            android:label="@string/title_activity_main_page2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.j.sakthikanth.onchats.ChatActivity"
            android:label="@string/title_activity_chat"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:parentActivityName="com.j.sakthikanth.onchats.MainPage2"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.j.sakthikanth.onchats.MainPage2" />
        </activity>
    </application>

</manifest>